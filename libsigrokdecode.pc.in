prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${exec_prefix}/@CMAKE_INSTALL_LIBDIR@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@
datarootdir=${prefix}/@CMAKE_INSTALL_DATAROOTDIR@
datadir=${datarootdir}
pkgdatadir=${datadir}/lib@PROJECT_NAME@
decodersdir=${pkgdatadir}/decoders

Name: libsigrokdecode
Description: Protocol decoder library of the sigrok logic analyzer software
URL: https://www.sigrok.org
Requires: glib-2.0
Requires.private: @SRD_PKGLIBS@
Version: @PROJECT_VERSION@
Libs: -L${libdir} -lsigrokdecode
Libs.private: -lm
Cflags: -I${includedir}
